{
  "name": "bubblegum-syntax",
  "theme": "syntax",
  "version": "0.3.0",
  "description": "An Atom syntax theme with delicious bubblegum colors",
  "keywords": [
    "bubblegum",
    "tone",
    "syntax",
    "customizable"
  ],
  "repository": "https://github.com/scotttesler/atom-bubblegum-syntax",
  "license": "MIT",
  "main": "lib/main",
  "engines": {
    "atom": ">1.9.0 <2.0.0"
  },
  "dependencies": {
    "chroma-js": "1.1.1"
  },
  "configSchema": {
    "color": {
      "title": "Custom Colors",
      "type": "object",
      "properties": {
        "uno": {
          "title": "Uno",
          "description": "Customize the main color",
          "order": 1,
          "type": "color",
          "default": "#575dff"
        },
        "duo": {
          "title": "Duo",
          "description": "Customize the first accent color",
          "order": 2,
          "type": "color",
          "default": "#9717bc"
        },
        "tri": {
          "title": "Tri",
          "description": "Customize the second accent color",
          "order": 3,
          "type": "color",
          "default": "#cb4f94"
        },
        "bg": {
          "title": "Background",
          "description": "Customize the background color",
          "order": 4,
          "type": "color",
          "default": "#ebe5ef"
        },
        "syncUI": {
          "title": "Sync UI",
          "description": "After making some changes, enable this to sync the colors also with other UI themes and packages. Note: It may take a few seconds to take effect. Doing this manually keeps the performance police happy. ðŸš“",
          "order": 5,
          "type": "boolean",
          "default": "true"
        }
      }
    }
  }
}
